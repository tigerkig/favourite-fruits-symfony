{% extends "base.html.twig" %}

{% block content %}

    <div class="container-fluid">
        <div class="col-md-10 offset-md-1">
            <h4 class="mt-5 mb-3">Favorite fruit page</h4>
            <table class="table table-striped table-hover mb-5">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Genus</th>
                        <th scope="col">Family</th>
                        <th scope="col">Order</th>
                        <th scope="col">Carbohydrates</th>
                        <th scope="col">Protein</th>
                        <th scope="col">Fat</th>
                        <th scope="col">Calories</th>
                        <th scope="col">Sugar</th>
                    </tr>
                </thead>
                <tbody>
                    {% if favorites is empty %}
                        <tr>
                            <td colspan='10' class="text-center">No data</td>
                        </tr>
                    {% else %}
                        {% for fruit in favorites %}
                            {%  set row_counter = loop.index %}
                            <tr>
                                <th scope="row">{{ row_counter }}</th>
                                <td>{{ fruit['name'] }}</td>
                                <td>{{ fruit['genus'] }}</td>
                                <td>{{ fruit['family'] }}</td>
                                <td>{{ fruit['order'] }}</td>
                                <td>{{ fruit['nutritions']['carbohydrates'] }}</td>
                                <td>{{ fruit['nutritions']['protein'] }}</td>
                                <td>{{ fruit['nutritions']['fat'] }}</td>
                                <td>{{ fruit['nutritions']['calories'] }}</td>
                                <td>{{ fruit['nutritions']['sugar'] }}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>

        <div class="col-md-10 offset-md-1">
            <h5 class="mt-3 mb-4">Sum of nutritions facts of all fruits</h5>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Carbohydrates</th>
                        <th scope="col">Protein</th>
                        <th scope="col">Fat</th>
                        <th scope="col">Calories</th>
                        <th scope="col">Sugar</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">{{ 1 }}</th>
                        <td>{{ carbohydrates }}</td>
                        <td>{{ protein }}</td>
                        <td>{{ fat }}</td>
                        <td>{{ calories }}</td>
                        <td>{{ sugar }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}